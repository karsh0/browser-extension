{
  "manifest_version": 3,
  "name": "BrowsePing",
  "version": "1.0.0",
  "description": "Socialize your browsing experience",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icons": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
